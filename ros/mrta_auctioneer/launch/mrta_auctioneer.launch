<launch>
  <param name="/use_sim_time" value="true"/>

  <node name="mrta_auctioneer" pkg="mrta_auctioneer" type="mrta_auctioneer" required="true" output="screen">
    <param name="task_file" value="$(find mrta_auctioneer)/task_files/$(arg task_file)" />
    <param name="mechanism" value="$(arg mechanism)" />
  </node>

  <!-- FKIE master discovery -->
  <node pkg="master_discovery_fkie" type="master_discovery" name="master_discovery" respawn="true" output="log" />
  <!--<node pkg="master_discovery_fkie" type="zeroconf" name="master_discovery" output="screen" />-->

  <!-- FKIE master sync -->
  <node pkg="master_sync_fkie" type="master_sync" name="master_sync" respawn="true" output="log">

    <rosparam param="ignore_nodes">
      [
<!--
       '/*fake_localization',
       '/*move_base_node',
-->
       '/*map_server'
      ]
    </rosparam>

    <rosparam param="sync_topics">
      [
      '/*/amcl_pose',
      '/experiment',
      '/tasks/*'
      ]
    </rosparam>
  </node>

</launch>
