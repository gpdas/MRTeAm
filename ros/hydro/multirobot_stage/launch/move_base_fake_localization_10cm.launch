<launch>
  <master auto="start"/>
  <param name="/use_sim_time" value="true"/>
  <include file="$(find multirobot_stage)/move_base_config/move_base.xml"/>
<!--  <node name="map_server" pkg="map_server" type="map_server" args="$(find multirobot_stage)/stage_config/maps/smartlab_ugv_arena_10px_buffers.png 0.1" respawn="false" /> -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(find multirobot_stage)/stage_config/maps/smartlab_ugv_arena_10px_buffers.png 0.01" respawn="false" />
  <node pkg="stage_ros" type="stageros" name="stageros" args="$(find multirobot_stage)/stage_config/worlds/smartlab_ugv_arena.world" respawn="false" >
    <param name="base_watchdog_timeout" value="0.2"/>
  </node>
  <node name="fake_localization" pkg="fake_localization" type="fake_localization" respawn="false">
      <param name="odom_frame_id" value="odom" />
      <param name="base_frame_id" value="base_link" />
  </node>
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find multirobot_stage)/single_robot.rviz" />
</launch>
